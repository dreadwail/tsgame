{
  "name": "tsgame",
  "description": "A game written in typescript.",
  "main": "index.js",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build": "webpack",
    "clean:jest": "shx rm -rf .jest",
    "clean:coverage": "shx rm -rf \"coverage/!(.keep)\"",
    "clean:dist": "shx rm -rf dist",
    "clean:npm": "shx rm -rf node_modules",
    "clean": "run-p clean:*",
    "postinstall": "run-s build",
    "start": "webpack-dev-server --env.mode development --open",
    "test:tslint": "tslint --format verbose --project tsconfig.json",
    "test:jest": "jest --verbose --coverage --config config/jest/config.json",
    "test:watch": "jest --watch --config config/jest/config.json",
    "test": "run-s test:tslint test:jest"
  },
  "dependencies": {
    "excalibur": "0.18.0"
  },
  "devDependencies": {
    "@beyonk/google-fonts-webpack-plugin": "0.5.0",
    "@types/jest": "23.3.0",
    "@types/node": "10.5.3",
    "babel-jest": "23.4.2",
    "babel-preset-env": "1.7.0",
    "canvas-prebuilt": "1.6.5-prerelease.1",
    "clean-webpack-plugin": "0.1.19",
    "compression-webpack-plugin": "1.1.11",
    "file-loader": "1.1.11",
    "html-webpack-plugin": "3.0.6",
    "jest": "23.4.2",
    "jest-environment-jsdom": "22.4.3",
    "jest-environment-jsdom-global": "1.0.3",
    "npm-run-all": "4.1.3",
    "shx": "0.3.2",
    "source-map-loader": "0.2.3",
    "ts-jest": "23.1.2",
    "ts-loader": "4.3.0",
    "tslint": "5.11.0",
    "tslint-microsoft-contrib": "5.0.2",
    "typescript": "3.0.1",
    "webpack": "4.8.1",
    "webpack-cli": "2.1.3",
    "webpack-dev-server": "3.1.4"
  }
}
